<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.avasyam.homeautomation">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".App"
        android:allowBackup="true"
        android:hardwareAccelerated="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.HomeAutomation">
        <activity android:name=".Kitchen"></activity>
        <activity
            android:name=".Hall"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".Bedroom"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".firstanim">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.OPENABLE" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>

        <activity
            android:name=".MainActivity"
            android:theme="@style/Theme.HomeAutomation.NoActionBar" />
        <activity android:name=".EditProfile" />
        <activity android:name=".Login" />
        <activity android:name=".Register">

        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>